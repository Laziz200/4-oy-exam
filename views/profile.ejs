<!DOCTYPE html>
<html lang="uz">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile Yangilash</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <% if (!user) { %>
      <div class="alert alert-danger" role="alert">Foydalanuvchi ma'lumotlari topilmadi. <a href="/" class="alert-link">Bosh sahifaga qaytish</a></div>
    <% } else { %>
      <h2 class="text-center mb-4">Profile Yangilash</h2>
      <% if (error) { %>
        <div class="alert alert-danger" role="alert"><%= error %></div>
      <% } %>
      <form action="/profile" method="post" class="needs-validation" novalidate>
        <div class="mb-3">
          <label for="username" class="form-label">Foydalanuvchi nomi</label>
          <input type="text" class="form-control" id="username" name="username" value="<%= user.username %>" required>
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>" required>
        </div>
        <button type="submit" class="btn btn-primary">Yangilash</button>
      </form>
    <% } %>
  </div>
  <script>
    (function () {
      'use strict'
      var forms = document.querySelectorAll('.needs-validation')
      Array.prototype.slice.call(forms)
        .forEach(function (form) {
          form.addEventListener('submit', function (event) {
            if (!form.checkValidity()) {
              event.preventDefault()
              event.stopPropagation()
            }
            form.classList.add('was-validated')
          }, false)
        })
    })()
  </script>
</body>
</html>